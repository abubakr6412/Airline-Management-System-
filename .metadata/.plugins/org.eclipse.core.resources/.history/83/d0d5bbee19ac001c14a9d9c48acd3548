package application;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.BeforeAll;
import org.junit.jupiter.api.Test;

class Testcases_Sprint1 {
	
	@BeforeAll
	public void populate(){
		
	}
	
	@Test
	public void Customer_ID() {
	assertEquals(ARS.getInstance().Customer_list.get(0).getCustomer_ID(),3001);
	}
	
	@Test
	public void CustomerName() {
		assertEquals(ARS.getInstance().Customer_list.get(0).getUsername(),"Hayiqa123");
	}
	@Test
	public void CustomerGender() {
		assertEquals(ARS.getInstance().Customer_list.get(0).getGender(),"Female");
	}
	
	@Test
	public void FDO_ID()
	{
		assertEquals(ARS.getInstance().FDO_list.get(0).getFDO_ID(),1001);
	}

	@Test
	public void Admin_ID()
	{
		assertEquals(ARS.getInstance().Admin_list.get(0).getAdmin_ID(),2001);
	}

	@Test
	public	void DeptTest2() {

		assertEquals("Hayiqa Fatima,505 G10/1 Islamabad,Female,03169131888,Hayiqa123,1234,21,3001", ARS.getInstance().Customer_list.get(0).GetCustomer());

	}
	
	@Test 
	public void AddCustomer() {
		Customer tempCust=new Customer("Haroon", "Risasat 5 Road 6 Islamabad", "Female", "0315593484","Hoeroon123", "1234", 45, 3002);
		
		ARS.getInstance().Customer_list.add(tempCust);
		
		assertEquals(tempCust,ARS.getInstance().Customer_list.get(1));
	}
	



	
	
}



